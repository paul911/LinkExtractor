    public static final int THUMBS_DB = 4;
    public static final int NOT_ALLOWED = 5;
    private String route = "";
    private String name = "";
    private String extension = "";

    public fileInfo(String file) {
        int bar = file.lastIndexOf("/");
        if (bar != -1) {
            this.route = file.substring(0, bar + 1);
            file = file.substring(bar + 1);
        }

        int dot = file.lastIndexOf(".");
        if (dot != -1) {
            this.name = file.substring(0, dot);
            this.extension = file.substring(dot);
        } else {
            this.name = file;
        }

        this.route = this.route.toLowerCase();
        this.name = this.name.toLowerCase();
        this.extension = this.extension.toLowerCase();
    }

    public int fileType() {
        String name = this.name();
        String ext = this.extension();
        if (name.equals("") && ext.equals("")) {
            return 0;
        } else if (!ext.equals(".html") && !ext.equals(".htm")) {
            if (ext.equals(".txt")) {
                return 2;
            } else if (!ext.equals(".gif") && !ext.equals(".jpg") && !ext.equals(".jpeg")) {
                return name.equals("thumbs") && ext.equals(".db") ? 4 : 5;
            } else {
                return 3;
            }
        } else {
            return 1;
        }
    }

